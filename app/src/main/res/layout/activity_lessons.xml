<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LessonsActivity"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center">

    <Button
            android:text="Comment faire des additions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/additionButton"
            android:padding="16dp" />

    <Button
            android:text="Comment faire des soustractions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/substractButton"
            android:padding="16dp" />

    <Button
            android:text="Comment faire des divisions euclidienne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/divisionButton"
            android:padding="16dp" />

    <Button
            android:text="Voir les tables de multiplications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonMultiplication"
            android:padding="16dp" />

</LinearLayout>
