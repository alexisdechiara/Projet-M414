<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".lessons.LessonsActivity"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center">

    <Button
            android:text="Comment poser une addition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/additionButton"
            android:padding="16dp" />

    <Button
            android:text="Comment poser une soustraction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/substractionButton"
            android:padding="16dp" />

    <Button
            android:text="Comment poser une multiplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/multiplicationButton"
            android:padding="16dp" />

    <Button
            android:text="Comment poser une division euclidienne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/divisionButton"
            android:padding="16dp" />

    <Button
            android:text="Table de multiplication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/multiplicationTableButton"
            android:padding="16dp" />

</LinearLayout>
