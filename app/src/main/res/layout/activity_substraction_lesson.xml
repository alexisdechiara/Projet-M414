<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".lessons.AdditionLessonActivity"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

        <TextView
                android:text="Comment poser une soustraction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titleAdditionLessons"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_marginBottom="25dp"
                android:textColor="@color/design_default_color_primary"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

        <TextView
                android:text="@string/explainSubstraction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/explainAddition"
                android:layout_marginBottom="10dp" />

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/youtube_player_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:videoId="YsBN6H8cfeI"
                app:autoPlay="false"
                app:showYouTubeButton="false"
                app:handleNetworkEvents="true"
                app:showFullScreenButton="false"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

        </com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView>

        <ToggleButton
                android:textOn="Exemple sans retenue"
                android:textOff="Exemple sans retenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/example1"
                android:layout_marginTop="10dp" />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:id="@+id/exempleView1">

            <ImageView
                    android:src="@drawable/subtraction_exo_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageExo_1" />

        </LinearLayout>

        <ToggleButton
                android:textOn="Exemple avec retenue"
                android:textOff="Exemple avec retenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/example2"
                android:layout_marginTop="10dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:id="@+id/exempleView2">

            <ImageView
                    android:src="@drawable/subtraction_exo_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageExo_2"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
